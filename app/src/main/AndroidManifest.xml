<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.openrun">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_twister"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_twister"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".module.BottomActivityMain"
            android:label="@string/title_activity_bottom_main"
            android:theme="@style/Theme.MaterialComponents.Light"/>
        <activity android:name=".module.login.view.LoginActivity"
            android:theme="@style/LoginTheme"/>
        <activity android:name=".module.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>